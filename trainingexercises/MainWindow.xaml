<Window x:Class="trainingexercises.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trainingexercises"
        mc:Ignorable="d"
        Title="Radio Buttons" Height="520" Width="820" Background="#FFC7E2C9"
        Name ="window">

    <Grid Height="120" Width="150" Margin="5">
        <StackPanel Margin="10" Opacity="0.8">
                <Label FontWeight="Bold">Choose color:</Label>
            <RadioButton Foreground="Red" FontWeight="Bold" Checked="RadioButton_red">Red</RadioButton>
            <RadioButton Foreground="Green" FontWeight="Bold" Checked="RadioButton_green">Green</RadioButton>
            <RadioButton Foreground="Blue" FontWeight="Bold" Checked="RadioButton_blue">Blue</RadioButton>
        </StackPanel>
        </Grid>


</Window>
